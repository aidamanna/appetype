<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user_invitation, html: { class:'form-horizontal', role:'form' }, url: create_user_invitation_path) do |f| %>
        <div class="row at-actions-wrapper">
          <div class="col-xs-5 col-xs-offset-1">
            <div class="at-title-green">
              Invite user
            </div>
          </div>
          <div class="col-xs-5 text-right">
            <%= submit_tag 'Send', class: 'btn btn-default btn-xm at-btn-dark' %>
            <%= link_to 'Cancel', users_path, class: 'btn btn-default btn-xm at-btn-dark', role: 'button' %>
          </div>
        </div>
        <div class="at-content-wrapper">
          <div class="row">
            <div class="col-xs-4 col-xs-offset-2">
              <%= render 'shared/validation_errors', errors: @validation_errors %>
            </div>
          </div>
          <div class="form-group">
            <div class="at-label col-xs-1 col-xs-offset-1">
              <%= f.label :email %>
            </div>
            <div class="col-xs-4">
              <%= f.email_field :email, class:'form-control', autofocus: true %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
