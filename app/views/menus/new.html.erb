<h1>Create a menu</h1>

<% if @menu.errors.any? %>
<p>The menu couldn't be created</p>
<ul>
  <% @menu.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_tag menus_path do %>
  <p>
    <%= label_tag :week, 'Week' %>
    <%= text_field_tag :week %>
  </p>
  <% @menu.daily_menus.each do |day, meal| %>
    <p><%= day.capitalize %></p>
    <% meal.each do |dish, description| %>
      <%= label_tag "#{day}_#{dish}", dish.humanize %>
      <%= text_area_tag "#{day}_#{dish}" %><br \>
    <% end %>
  <% end %>
  <p>
    <%= submit_tag 'Save' %>
  </p>
<% end %>
