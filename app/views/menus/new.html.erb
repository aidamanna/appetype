<div class="row">
  <div class="col-xs-12">
    <%= form_tag menus_path, class:'form-horizontal', role:'form' do %>
      <div class="row at-actions-wrapper">
        <div class="col-xs-5 col-xs-offset-1">
          <div class="at-title-green">
            <%= @menu.week_description %>
          </div>
        </div>
        <div class="col-xs-5 text-right">
          <%= submit_tag 'Save', class:'btn btn-default btn-xm at-btn-dark' %> <%= link_to 'Cancel', menus_path,class:'btn btn-default btn-xm at-btn-dark' %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <%= render 'shared/validations', object: @menu %>
        </div>
      </div>
      <% @menu.daily_menus.each do |day, meal| %>
        <div class="at-day-wrapper">
          <div class="form-group">
            <div class="col-xs-1 col-xs-offset-1">
              <div class="at-subtitle-green">
                <%= day %>
              </div>
            </div>
          </div>
          <% meal.each do |dish, _| %>
            <div class="form-group">
              <div class="at-label col-xs-1 col-xs-offset-1">
                <%= label_tag "#{day}_#{dish}", dish.humanize %>
              </div>
              <div class="col-xs-6">
                <%= text_area_tag "#{day}_#{dish}", '', rows: 3, class:'form-control', autofocus: true %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
